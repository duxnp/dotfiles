{
    // UI Theme
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#E57373",
        "list.activeSelectionForeground": "#E57373",
        "list.inactiveSelectionForeground": "#E57373",
        "list.highlightForeground": "#E57373",
        "scrollbarSlider.activeBackground": "#E5737350",
        "editorSuggestWidget.highlightForeground": "#E57373",
        "textLink.foreground": "#E57373",
        "progressBar.background": "#E57373",
        "pickerGroup.foreground": "#E57373",
        "tab.activeBorder": "#E57373",
        "notificationLink.foreground": "#E57373"
    },
    "workbench.colorTheme": "DuoTone Dark Space",
    "workbench.iconTheme": "city-lights-icons-vsc",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    //
    // Files
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/node_modules": true
    },
    "files.associations": {
        "*.toml": "ini",
        "*.plist": "xml",
        "*.skhdrc": "shellscript",
        "*.yabairc": "shellscript",
        "*.aliases": "shellscript",
        "*.functions": "shellscript",
        "*.coveragerc": "ini",
    },
    //
    // UI Explorer Sidebar
    "explorer.compactFolders": false,
    // UI Editor Window
    "editor.rulers": [
        79,
        99
    ],
    //
    // Editor
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.fontSize": 15,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.showSlider": "always",
    "editor.renderLineHighlight": "all",
    "editor.tabCompletion": "on",
    "editor.suggestSelection": "first",
    "editor.cursorSurroundingLines": 10,
    //
    // UI Minimap
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    //
    // UI Misc
    // "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "newUntitledFile",
    //
    // Misc
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 99,
    "editor.find.autoFindInSelection": "multiline",
    "workbench.list.multiSelectModifier": "alt",
    "workbench.settings.editor": "json",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "window.nativeFullScreen": false,
    "window.restoreWindows": "none",
    //
    // Emmet
    "emmet.includeLanguages": {
        "markdown": "md",
        "jinja-css": "css",
        "jinja-html": "html",
    },
    //
    // ------------------------------------------------------------------------
    // Python
    //
    // -- Formatting
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/bin/black",
    // "python.sortImports.path": "~/.local/bin/isort",
    "python.sortImports.args": [
        "--profile=black",
        "--lines-after-imports=2"
    ],
    // -- Linting - Pylance
    "python.languageServer": "Pylance",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "basic",
    // -- Linting - Flake8
    "python.linting.enabled": true,
    "python.linting.flake8Path": "~/.local/bin/flake8",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501,E231,W503,E402,E128,E711,E131,E126,E241,T499"
    ],
    // -- Linting - mypy
    // "python.linting.mypyEnabled": true,
    // "python.linting.mypyPath": "~/.local/bin/mypy",
    // "python.linting.mypyArgs": [
    //     "--ignore-missing-imports"
    // ],
    // -- venv / Poetry
    "python.venvPath": "~/Library/Caches/pypoetry/virtualenvs",
    // ------------------------------------------------------------------------
    //
    // ------------------------------------------------------------------------
    // JSON
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    "[jsonc]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    // ------------------------------------------------------------------------
    //
    // ------------------------------------------------------------------------
    // YAML
    //
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // ------------------------------------------------------------------------
    //
    // ------------------------------------------------------------------------
    // Markdown
    "markdownlint.config": {
        "MD014": false,
        "MD041": false,
        "MD024": false,
        "MD026": false,
        "MD046": false,
        "MD007": {
            "indent": 4,
        }
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": true
        },
        "editor.quickSuggestions": true,
        "editor.wordBasedSuggestions": false,
        "editor.suggest.showSnippets": false,
        "files.trimTrailingWhitespace": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    // ------------------------------------------------------------------------
    //
    // ------------------------------------------------------------------------
    // HTML/CSS/Javascript
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "css.lint.emptyRules": "ignore",
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "scss.lint.emptyRules": "ignore",
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    // ------------------------------------------------------------------------
    //
    //
    // Extenstions
    "gitlens.codeLens.enabled": false,
    "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
    "todo-tree.filtering.excludeGlobs": [
        "**/temp/**",
        "**/tmp/**",
    ],
    "todo-tree.general.tags": [
        "BUG",
        "BUG:HIGH",
        "BUG:MED",
        "BUG:LOW",
        "DEBUGGING",
        "FIXME",
        "FIXME:HIGH",
        "FIXME:MED",
        "FIXME:LOW",
        "NOTE",
        "QUESTION",
        "TEMP",
        "TODO",
        "TODO:HIGH",
        "TODO:MED",
        "TODO:LOW",
        "WIP",
        "[H]",
        "[M]",
        "[L]",
        "✓11.0",
        "?11.0",
        "✓UI",
        "?UI",
        "xUI",
    ],
    "todo-tree.regex.regex": "(?<!\\w)($TAGS)(?!\\w)",
    "todo-tree.ripgrep.ripgrepArgs": "--pcre2",
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "iconColour": "gray",
        "foreground": "textLink.foreground",
    },
    "todo-tree.highlights.customHighlight": {
        "DEBUGGING": {
            "hideFromTree": true,
        },
        "FIXME:HIGH": {
            "iconColour": "crimson",
        },
        "FIXME:MED": {
            "iconColour": "darkorange",
        },
        "FIXME:LOW": {
            "iconColour": "gold",
        },
        "NOTE": {
            "hideFromTree": true,
        },
        "QUESTION": {
            "iconColour": "green",
        },
        "TEMP": {
            "iconColour": "lightblue",
        },
        "[H]": {
            "foreground": "crimson",
        },
        "[M]": {
            "foreground": "darkorange",
        },
        "[L]": {
            "foreground": "gold",
        },
        "✓11.0": {
            "foreground": "green"
        },
        "?11.0": {
            "foreground": "orange"
        },
        "✓UI": {
            "foreground": "green"
        },
        "?UI": {
            "foreground": "orange"
        },
        "xUI": {
            "foreground": "gray"
        },
    },
    "cSpell.userWords": [
        "anki",
        "annotation",
        "bpython",
        "brewfile",
        "chmod",
        "color",
        "datefmt",
        "div",
        "divs",
        "dotfiles",
        "epub",
        "epubcfi",
        "favicon",
        "flexbox",
        "gitattributes",
        "hsla",
        "htmlcov",
        "iglob",
        "isnumeric",
        "isort",
        "kwargs",
        "liga",
        "lightbox",
        "minmax",
        "mixins",
        "mkdir",
        "moom",
        "nargs",
        "objs",
        "octicons",
        "path",
        "pipx",
        "plist",
        "plistlib",
        "prettierrc",
        "psutil",
        "pyenv",
        "pymdownx",
        "pyproject",
        "pytest",
        "quickstart",
        "rgba",
        "rsync",
        "run",
        "skhd",
        "skhdrc",
        "slugified",
        "sorolla",
        "strftime",
        "strptime",
        "theming",
        "todos",
        "treeify",
        "urlify",
        "venv",
        "webm",
        "werkzeug",
        "xattrs",
        "yabai",
        "yabairc"
    ],
    "window.zoomLevel": 0,
    "todo-tree.tree.showScanModeButton": false,
}