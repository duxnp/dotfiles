{
    //
    // UI Theme
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#E57373",
        "list.activeSelectionForeground": "#E57373",
        "list.inactiveSelectionForeground": "#E57373",
        "list.highlightForeground": "#E57373",
        "scrollbarSlider.activeBackground": "#E5737350",
        "editorSuggestWidget.highlightForeground": "#E57373",
        "textLink.foreground": "#E57373",
        "progressBar.background": "#E57373",
        "pickerGroup.foreground": "#E57373",
        "tab.activeBorder": "#E57373",
        "notificationLink.foreground": "#E57373"
    },
    "workbench.colorTheme": "Activate SCARLET protocol (beta)",
    "workbench.iconTheme": "city-lights-icons-vsc",
    //
    // UI Explorer Sidebar
    "explorer.compactFolders": false,
    //
    // Files
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true
    },
    "files.associations": {
        "*.toml": "ini",
        "*.spec": "python",
        "*.qss": "css"
    },
    //
    // Integrated Terminal
    "terminal.integrated.fontFamily": "Fira Code",
    //
    // UI Editor Window
    "editor.rulers": [
        79,
        99
    ],
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.showSlider": "always",
    "editor.renderLineHighlight": "all",
    "editor.tabCompletion": "on", // Test!
    //
    // UI Minimap
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    //
    // UI Misc
    "workbench.startupEditor": "newUntitledFile",
    //
    // Linting/Formatting
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Args": [
        "--ignore=E501,E128,E711,E131,E126,E241,T499"
    ],
    //
    // Poetry / venv
    "python.venvPath": "~/Library/Caches/pypoetry/virtualenvs",
    //
    // Misc
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 99,
    "editor.find.autoFindInSelection": "multiline",
    "workbench.list.multiSelectModifier": "alt",
    "workbench.settings.editor": "json",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "window.nativeFullScreen": false,
    "window.zoomLevel": 1,
    //
    // Zen Mode
    "zenMode.fullScreen": false,
    //
    // IntelliCode
    "python.jediEnabled": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    //
    // Extenstions
    "projectManager.projectsLocation": "~/.dotfiles/projects.json",
    "sync.gist": "d35243a837d404d545cb56144030f4ee",
    "sync.autoUpload": true,
    "sync.quietSync": true,
    "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
    "todo-tree.general.tags": [
        "WIP",
        "BUG",
        "TEMP",
        "TODO",
        "NOTE",
        "QUESTION",
        "TESTING",
        "DEBUGGING",
        "WARNING",
        "FIXME"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "iconColour": "#77AA00",
        "foreground": "#77AA00",
    },
}